<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table style="width:100%" class = 'table-striped'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <td> Team Name </td>
        <td> Details </td>
        <td> Worksessions </td>
        <td> Edit </td>
        <td> Delete </td>
  <tbody>
    <% @users.each do |user| %>
      <% if not user.admin? %>
      <tr>
        <td><%= user.team_name %></td>
        <td><%= link_to 'Details', user %></td>
        <td><%= link_to 'Worksessions', user_worksessions_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end %>
  </tbody>
</table>

<br>

